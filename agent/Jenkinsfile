pipeline {
    agent any
    environment {
        TEST = "test_value"
        TEST1 = "test_value1"
    }

    stages {
        stage('Build') {
            environment {
                BUILD_NAME = "my_build"
            }

            steps {
                sh '''
                    set +x
                    echo $TEST $BUILD_NAME
                    sleep 5
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                    #!/bin/bash
                    set +x
                    echo $TEST $BUILD_NAME
                    sleep 5
                '''
            }
        }

    }
}
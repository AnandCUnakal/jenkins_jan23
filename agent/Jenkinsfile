pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                       branches: [[name: '*/main']],
                       userRemoteConfigs: [[url: 'https://github.com/jaintpharsha/applications.git',
                       credentialsId: 'github']]])
            }
        }

        stage('Build') {

            steps {
                sh '''
                    sleep 5
                '''
            }
        }

        stage('Test') {

            steps {
                sh '''
                    sleep 10
                    exit 1
                '''
            }
        }

        stage('Deploy') {

            steps {
                sh '''
                  sleep 5
                '''
            }
        }
    }
}
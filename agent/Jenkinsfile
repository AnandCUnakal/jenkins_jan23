pipeline {
    agent any
    environment {
        TEST = "test_value"
        TEST1 = "test_value1"
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                    set +x
                    echo $TEST $TEST1
                    sleep 5
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                    #!/bin/bash
                    set +x
                    echo $TEST $TEST1
                    sleep 5
                '''
            }
        }

    }
}